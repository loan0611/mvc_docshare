@model DocShare.Models.TaiLieu
@{
    ViewBag.Title = "_MenuPartial";
}

    <div class="head-link">
        <div class="row">
            @Html.DropDownListFor( , new { @class = "control-label col-md-5" })
            <div class="col-xs-12 col-md-10">
                
            </div>

        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-8">
            </div>
            <div class="col-xs-12 col-sm-4">
                @using (Html.BeginForm("Index", "TaiLieu", FormMethod.Get, new { onsubmit= "return checkInput()" }))
                {
                    @Html.TextBox("searchString", "", htmlAttributes: new { @class = "txtseach", @placeholder = "Seach", @id = "seachtl" })
                    @*<input type="text" placeholder="Search..." />*@
                    <button type="submit" name="seach" id="seach"><img src="~/Content/Images/1486481340_xmag.png" height="20" width="20" /></button>
                    @*<button style="margin-left:5px" class="btn btn-info btn-xs">Upload</button>*@
                    <button type="submit" class="btn btn-info">
                        @Html.ActionLink("Upload", "Submit", "Manager")
                    </button>
                }
                @*@Html.ActionLink("Đăng Nhập", "Login", "Account")
                    @Html.ActionLink("Đăng ký", "Register", "Account")*@
                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @Html.ActionLink("Hello " + User.Identity.Name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                            </li>
                            <li><a href="javascript:document.getElementById('logoutForm').submit()">Logoff</a></li>
                        </ul>
                    }
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    </ul>
                }

                <br />
                <a href="#">Tìm kiếm nâng cao?</a><br />
            </div>

        </div>
    </div>

<script>
    function checkInput() {
        var s = document.getElementById('seachtl');
        if (s.value == "") {
            alert('Hãy điền thông tin search vào');
            return false;
        }
    }
</script>