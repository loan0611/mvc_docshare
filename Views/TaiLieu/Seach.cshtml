@using PagedList;
@using PagedList.Mvc;
@using DocShare.Models;
@model PagedList.PagedList<TaiLieu>

@{
    ViewBag.Title = "Seach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div>
        @ViewBag.ThongBao
    </div>
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-xs-12 col-sm-4">
                <img src="~/Content/Images/TL1.png" />
                @item.Anh
            </div>
            <div class="col-xs-12 col-sm-8">
                @item.NhanDe
                @Html.ActionLink("Xem chi tiết...", "Index", "XemChiTiet")
            </div>
        </div>
    }
    @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))*@
</div>
@*Trang @((Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / Model.PageCount)*@


@Html.PagedListPager(Model, page => Url.Action("Seach", new { page = page, @sTuKhoa = ViewBag.TuKhoa }))
